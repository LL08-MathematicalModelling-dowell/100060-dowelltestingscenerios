  <script src="/javascripts/stream.js"></script>

  <script>
    // Toggle camera function
    function toggleCamera() {
      const cameraIcon = document.getElementById('camera');
      cameraIcon.classList.toggle('active');
      // Additional functionality to actually start/stop camera share goes here
    }

    // Toggle screen share function
    function toggleScreenShare() {
      const screenIcon = document.getElementById('screen');
      screenIcon.classList.toggle('active');
      // Additional functionality to actually start/stop screen share goes here
    }

    // Toggle sharing both camera and screen
    function toggleBoth() {
      const bothIcon = document.getElementById('both');
      bothIcon.classList.toggle('active');
      // This should likely toggle both the camera and screen share functionalities
    }

    // Toggle audio function
    function toggleAudio() {
      const audioIcon = document.getElementById('audio-container');
      audioIcon.classList.toggle('active');
      // Additional functionality to actually mute/unmute goes here
    }

    // Function to update live indicator - assuming toggling visibility
    function toggleLiveIndicator() {
      const liveIndicator = document.getElementById('live-indicator');
      liveIndicator.classList.toggle('active');
      // Possibly start/stop live stream
    }
  </script>

</body>

</html>